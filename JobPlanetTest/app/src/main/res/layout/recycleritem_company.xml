<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/comapany_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/separator_layout"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="#aaaaaa"
            />

        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/logo_path"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintTop_toBottomOf="@id/separator_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123"
            app:layout_constraintTop_toBottomOf="@id/separator_layout"
            app:layout_constraintStart_toEndOf="@+id/logo_path"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="10dp"
            />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/rate_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toEndOf="@+id/logo_path"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_weight="1"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
        >
            <androidx.constraintlayout.utils.widget.ImageFilterView
                android:id="@+id/rate_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_launcher_background"
                android:layout_marginEnd="10dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rate_total_avg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0"
                />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/industry_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="제조/화학"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintStart_toEndOf="@+id/rate_layout"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            />

<!--        <androidx.appcompat.widget.LinearLayoutCompat-->
